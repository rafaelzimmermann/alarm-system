#!upstart
description "Alarm System"
author      "Rafael Zimmermann"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/alarm.pid
    exec sudo -u pi /usr/local/bin/node /home/pi/workspace/alarm-system/main.js >> /var/log/alarm.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/alarm.log
end script

pre-stop script
    rm /var/run/alarm.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/alarm.log
end script
