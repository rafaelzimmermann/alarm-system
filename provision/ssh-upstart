#!upstart
description "Alarm SSH System"
author      "Rafael Zimmermann"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/alarm-ssh.pid
    exec sudo /usr/local/bin/node /home/pi/workspace/alarm-system/ssh.js >> /var/log/alarm-ssh.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/alarm-ssh.log
end script

pre-stop script
    rm /var/run/alarm-ssh.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/alarm-ssh.log
end script
